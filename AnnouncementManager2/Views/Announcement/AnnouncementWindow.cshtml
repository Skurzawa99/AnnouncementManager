@model AnnouncementManager2.Core.Models.Domains.Announcement
@{
    ViewData["Title"] = "AnnouncementWindow";
}
<div id="announcementWindow">

    <div class="mt-3 mb-3">
        <h1>@Model.Subject</h1>
        <hr />
    </div>

    <div class="row">
        <div class="col-lg-9">
            <div class="mb-3">
                <img src="~/Images/@Model.ImageName"
                     width="500px"
                     height="500px"
                     asp-append-version="true" />
            </div>

            <div class="mb-3">
                <h2><b>@Model.Price zł</b></h2>
            </div>

            <div class="row mt-3 mb-3 mx-auto">
                <h4><b>Opis</b></h4>
                <hr/>
                <textarea class="mb-3" wrap="hard" rows="20" readonly>@Model.Body</textarea>
            </div>
        </div>

        <div class="col-lg-3 verticalLine">
            <div class="mb-3">
                <b>Autor ogłoszenia:</b>
                @Model.UserName
            </div>
            <hr/>
            <div class="mb-3">
                <b>Data Dodania:</b>
                <br/>
                @Model.StartAnnouncement
            </div>
            <hr />
            <div class="mb-3 float-end">
                <small>Nr ogłoszenia: @Model.Id</small>
            </div>        
        </div>
    </div>
</div>
